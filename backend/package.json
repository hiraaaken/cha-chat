{
  "name": "@cha-chat/backend",
  "version": "0.1.0",
  "description": "Backend server for cha-chat - Hono + Socket.IO",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "biome check .",
    "format": "biome format --write .",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "hono",
    "websocket",
    "socket.io",
    "chat"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "drizzle-orm": "^0.39.1",
    "hono": "^4.11.8",
    "ioredis": "^5.4.2",
    "neverthrow": "^8.2.0",
    "postgres": "^3.4.5",
    "socket.io": "^4.8.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@electric-sql/pglite": "^0.3.15",
    "@types/node": "^22.10.5",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
