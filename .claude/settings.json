{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/biome-lint-format.sh",
            "timeout": 30,
            "statusMessage": "Running Biome lint & format..."
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/tsc-check.sh",
            "timeout": 60,
            "statusMessage": "Running TypeScript type check..."
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/dart-analyze.sh",
            "timeout": 60,
            "statusMessage": "Running Dart analyze..."
          }
        ]
      }
    ]
  }
}
